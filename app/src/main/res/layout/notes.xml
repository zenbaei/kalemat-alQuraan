<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/notesRoot" android:background="@color/yellow">

    <TextView
        android:id="@+id/notes_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:gravity="center"
        android:text="@string/notes_1"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notes_1"
        android:padding="10dp" android:paddingLeft="20dp"
        android:text="@string/notes_2" />

</RelativeLayout>
